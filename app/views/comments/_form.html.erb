<%= form_for([@post, @post.comments.build]) do |f| %>
  <br />
<div class="row">
	<div class="small-3 columns"><%= f.label :commenter %></div>
<div class="small-9 columns"><%= f.text_field :commenter %></div>
</div>

<div class="row">
	<div class="small-3 columns"><%= f.label :comment %></div>
<div class="small-9 columns"><%= f.text_area :body %></div>
</div>

<div class="row">
	<div class="small-3 small-offset-3 columns"> <%= f.submit %></div>
</div>
<% end %>
